<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".setup.fragment.SetupEulaFragment">

        <ImageView
            android:id="@+id/setupPlaceFragmentIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_colour" />

        <TextView
            android:id="@+id/setupPlaceFragmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/catamaran_semibold"
            android:text="@string/setup_place_title"
            android:textAlignment="center"
            android:textColor="@color/primary_colour"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setupPlaceFragmentIcon" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setupPlaceFragmentTitle">

            <RadioButton
                android:id="@+id/homeRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_colour"
                android:checked="true"
                android:fontFamily="@font/catamaran_semibold"
                android:text="@string/place_home"
                android:textColor="@color/title_text" />

            <TextView
                android:id="@+id/homeRadioButtonDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran_light"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:text="@string/place_home_desc"
                android:textColor="@color/basic_text" />

            <RadioButton
                android:id="@+id/schoolRadioButtonChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_colour"
                android:checked="false"
                android:fontFamily="@font/catamaran_semibold"
                android:text="@string/place_school"
                android:textColor="@color/title_text" />

            <TextView
                android:id="@+id/schoolRadioButtonChoiceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran_light"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:text="@string/place_school_desc"
                android:textColor="@color/basic_text" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>