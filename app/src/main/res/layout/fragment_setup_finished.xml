<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setup.fragment.SetupEulaFragment">

        <ImageView
            android:id="@+id/setupIDFragmentIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_icon_inapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setupPlaceFragmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/catamaran_extrabold"
            android:text="@string/setup_finished_title"
            android:textAlignment="center"
            android:textColor="@color/primary_colour"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setupIDFragmentIcon" />

        <TextView
            android:id="@+id/suggestionsEnableFeaturesDescription2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/catamaran_semibold"
            android:text="@string/setup_finished_descr"
            android:textAlignment="center"
            android:textColor="@color/basic_text"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/setupPlaceFragmentTitle"
            app:layout_constraintStart_toStartOf="@+id/setupPlaceFragmentTitle"
            app:layout_constraintTop_toBottomOf="@+id/setupPlaceFragmentTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>